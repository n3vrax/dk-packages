{% extends '@layout/default.html.twig' %}

{% block title %}Packages{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/packages.css') }}"/>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row" >
            <div class="jumbotron">
                <h1 class="font-weight-700">DotKernel 3 Composer Repository</h1>
                <p id="lastupdate">
                    Last updated: {{ lastUpdated }} ago
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <h3 class="search-h3">
                    Filter by package name:
                </h3>
                <input class="search-input" type="text" id="search" title="search" autocomplete="off" autofocus="">
            </div>
        </div>

        <div class="spacing"></div>
        <div class="hline"></div>
    </div>
    <div class="spacing"></div>

    <div id="package-list" class="container">
        {% for package in data %}
            <div class="row" style="display: block;">
                <div class="col-sm-12 col-lg-12">
                    <div class="panel panel-default panel-component">
                        <div class="panel-heading">
                            <h4 id="{{ package.name }}">
                                {{ package.name }}
                                <a href="#{{ package.name }}"><small>Â¶</small></a>
                            </h4>
                        </div>

                        <div class="panel-body">
                            <p>{{ package.description }}</p>

                            <table class="table table-bordered">
                                <tbody>
                                <tr>
                                    <th class="info">Homepage</th>
                                    <td><a href="{{ package.repository }}" class="repository" target="_blank">{{ package.repository }}</a></td>
                                </tr>
                                <tr>
                                    <th class="info">License</th>
                                    <td style="color: #0f1419;font-weight: 400;">{{ package.license }}</td>
                                </tr>
                                <tr>
                                    <th class="info">Releases</th>
                                    <td>
                                        {% for version, url in package.versions %}
                                            <a class="url-style"  href="{{ url }}">{{ version }}</a>
                                            {% if not loop.last %},{% endif %}
                                        {% endfor %}
                                    </td>
                                </tr>
                                <tr>
                                    <th class="info">Required by</th>
                                    <td>
                                        <ul>
                                            {% for require, url in package.requiredByPackages %}
                                                <li><a class="url-style" href="#{{ require }}">{{ require }}</a></li>
                                            {% endfor %}
                                        </ul>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
{% block javascript %}
    <script src="{{ asset('js/search.js') }}"></script>
{% endblock %}
